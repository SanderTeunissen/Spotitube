CREATE SCHEMA `Spotitube_DB`

CREATE TABLE `Spotitube_DB`.`Users` (
  `ID` INT NOT NULL AUTO_INCREMENT,
  `User` VARCHAR(245) NOT NULL,
  `Password` VARCHAR(245) NOT NULL,
  PRIMARY KEY (`ID`),
  UNIQUE INDEX `User_UNIQUE` (`User` ASC) VISIBLE);

CREATE TABLE `Spotitube_DB`.`Playlists` (
  `ID` INT NOT NULL AUTO_INCREMENT,
  `Name` VARCHAR(245) NOT NULL,
  `OwnerID` INT NOT NULL,
  PRIMARY KEY (`ID`),
  INDEX `PlaylistOwner_idx` (`OwnerID` ASC) VISIBLE,
  CONSTRAINT `PlaylistOwner`
    FOREIGN KEY (`OwnerID`)
    REFERENCES `Spotitube_DB`.Users_Old (`ID`)
    ON DELETE CASCADE
    ON UPDATE CASCADE);
